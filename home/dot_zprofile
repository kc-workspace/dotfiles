## Use fd     instead of find (f)
## Use lsd    instead of ls (l)
## Use zoxide instead of cd (z)

## Setup home bin
home_bin="$HOME/bin"
if [ -d "$home_bin" ]; then
  PATH="$PATH:$home_bin"
fi
unset home_bin

## Setup local bin
local_bin="$HOME/.local/bin"
if [ -d "$local_bin" ]; then
  PATH="$PATH:$local_bin"
fi
unset local_bin

## Setup mise
mise="$HOME/.local/bin/mise"
if [ -f "$mise" ]; then
  eval "$("$mise" activate zsh)"

  completions="/usr/local/share/zsh/site-functions"
  if ! [ -f "$completions/_mise" ]; then
    [ -d "$completions" ] || mkdir -p "$completions"
    "$mise" completion zsh >"$completions/_mise"
  fi
  unset completions
fi
unset mise

## Setup docker cli (on user mode)
docker_bin="$HOME/.docker/bin"
if [ -d "$docker_bin" ]; then
  PATH="$PATH:$docker_bin"
fi
unset docker_bin

# Alias
alias c="clear"
#   - ls
alias l="lsd"
alias la="lsd --almost-all --long"
#   - find
alias f="fd"
#   - chezmoi
alias cz="chezmoi"
alias cza="chezmoi add"
alias cze="chezmoi edit"
alias czi="chezmoi init --apply"
#   - vscode
alias code="code-insiders"
