## To get all available configuration with documentation, run:
# ghostty +show-config --default --docs | code -

## no-title is required for Starship prompt to update the title correctly
shell-integration-features = cursor,sudo,no-title,ssh-env,ssh-terminfo,path

quick-terminal-position = bottom

keybind = clear
## Global Keybinds
keybind = global:super+shift+quote=toggle_quick_terminal
## Generic Keybinds
keybind = super+key_p=toggle_command_palette
keybind = super+alt+i=inspector:toggle
keybind = super+key_w=close_surface
keybind = super+key_q=quit
keybind = super+key_n=new_window
keybind = super+key_t=new_tab
keybind = super+digit_0=reset_font_size
keybind = super+minus=decrease_font_size:1
keybind = super+equal=increase_font_size:1
keybind = super+key_a=select_all
keybind = super+key_c=copy_to_clipboard
keybind = copy=copy_to_clipboard
keybind = super+key_v=paste_from_clipboard
keybind = paste=paste_from_clipboard

keybind = super+comma=reload_config

## Navigation Keybinds
