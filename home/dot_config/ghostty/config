keybind = super+digit_3=goto_tab:3
keybind = super+digit_4=goto_tab:4
keybind = super+digit_5=goto_tab:5
keybind = super+digit_6=goto_tab:6
keybind = super+digit_7=goto_tab:7
keybind = super+digit_8=goto_tab:8
keybind = super+digit_9=goto_tab:9
## Split Keybinds
keybind = super+key_d=new_split:right
keybind = super+shift+key_d=new_split:down
keybind = super+key_h=goto_split:left
keybind = super+key_k=goto_split:up
keybind = super+key_j=goto_split:bottom
keybind = super+key_l=goto_split:right

