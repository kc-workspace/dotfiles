## $HOME/.config/chezmoi/chezmoi.yaml

encryption: gpg
gpg:
  recipient: '014089557+kamontat@users.noreply.github.com'
  args = ["--quiet"]

sourceDir: "~/.local/share/chezmoi"
destDir: "~"

## https://www.chezmoi.io/user-guide/daily-operations/#automatically-commit-and-push-changes-to-your-repo
git:
  autoAdd: true
  autoCommit: true
  autoPush: true
  commitMessageTemplateFile: 'assets/templates/COMMIT_MESSAGE.tmpl'

progress: true

add:
  encrypt: true

edit:
  apply: false
  command: "code"
  args: ["--wait"]

update:
  apply: true
