[core]
	editor = vim
	fsmonitor = true

[init]
	defaultBranch = main

[log]
	decorate = short

[blame]
	coloring = repeatedLines

[commit]
	gpgsign = true

[tag]
	gpgsign = true

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[color "diff"]
	meta = blue
	frag = black
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "blame"]
	repeatedLines = gray

[color "interactive"]
	help = brightmagenta

[alias]
	b = branch
	c = commit
	cm = commit -m
	ca = commit --amend
	co = checkout
	st = status
	up = pull --rebase origin
	pm = push --set-upstream origin main

{{- if eq .chezmoi.os "darwin" }}

[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
{{- end }}

[push]
	autoSetupRemote = true

[pull]
	rebase = false

[credential "https://github.com"]
	useHttpPath = true

[column]
	ui = auto

[rerere]
	enabled = true

[branch]
	sort = -committerdate

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

